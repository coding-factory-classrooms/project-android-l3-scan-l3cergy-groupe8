<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/shoppinglistCreationLabelTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="76dp"
        android:text="Nouvelle liste"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/shoppinglistNameEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/shoppinglistCreationLabelTextView"
        app:layout_constraintStart_toStartOf="@+id/shoppinglistCreationLabelTextView"
        app:layout_constraintTop_toBottomOf="@+id/shoppinglistCreationLabelTextView" />

    <Button
        android:id="@+id/createShoppinglistButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:text="CrÃ©er une liste de course"
        app:layout_constraintEnd_toEndOf="@+id/shoppinglistNameEditText"
        app:layout_constraintStart_toStartOf="@+id/shoppinglistNameEditText"
        app:layout_constraintTop_toBottomOf="@+id/shoppinglistNameEditText" />
</androidx.constraintlayout.widget.ConstraintLayout>